generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model facturas_compras {
  id            String   @id @default(cuid())
  timbrado      Int
  ruc           String
  condicion     String
  fecha_emision DateTime
  valor         Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  razonSocial   String
}

model facturas_ventas {
  id            String   @id @default(cuid())
  timbrado      Int
  ruc           String
  condicion     String
  fecha_emision DateTime
  valor         Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())
  razonSocial   String
}

model contadores {
  id        String   @id(map: "contador_pkey") @default(cuid())
  ruc       String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  password  String
  nombre    String
}

model vendedores {
  id        String   @id(map: "vendedor_pkey") @default(cuid())
  ruc       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  nombre    String
}
